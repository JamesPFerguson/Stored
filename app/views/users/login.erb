<h3>Login to Thing Tracker</h3>

<% if flash[:message] %>
  <%= flash[:message] %>
<%end%>

<form action="/login" method="POST">
  <input type="text" name="username" placeholder="Username:">
  <br>
  <input type="password" name="password" placeholder="Password:">
  <br>
  <input type="submit" value="Log in">
</form>
